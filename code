#include <iostream>
#include <cstdlib>
#include <windows.h>
#include <time.h>
#include <vector>

using namespace std;

void inverse(bool r) {
	cout << "Введите номер бита, который не хотите инвертировать в диапазоне от 0 до 30" << endl;
	int a;
	cin >> a;
	for (int n = 30; n > a; n--) {
		r = rand() % 32;
	} cout << r;

	for (int n = a - 1; n > -1; n--) {
		r = rand() % 32;
		cout << r;
	}

}



int main()
{
	setlocale(LC_ALL, "Russian");
	bool menu=true;
	while (menu) {
		int number;
		cout << "Для работы с этой программой можно использовать только цифры." << endl;
		cout << "Выберите тип числа, которое хотите перевести в двоичное представление:" << endl;
		cout << "1 - число типа float" << endl;
		cout << "2 - число типа short int " << endl;
		cin >> number;
		switch (number) {
		case 1: {
			cout << "Введите число типа float. Диапазон значений переменной с плавающей точкой приблизительно равен от 3.14E-38 до 3.14E+38." << endl;
			float k;
			cin >> k;
			union {
				float k1;
				int k2;
			} uni;
			uni.k1 = k;
			int n = 31;
			int sum = 0;
			cout << "Двоичное представление числа:" << endl;
			bool r = uni.k2 & (1U << n);
			cout << r;
			for (n = 30; n > -1; n--) {
				r = uni.k2 & (1U << n);
				cout << r;
			}
			cout << endl;
			cout << "Введите количество битов, которые не хотите инвертировать" << endl;
			cin >> sum;
			while (sum > 0) {
				inverse(r);
				sum--;
			}
			for (n = 31; n > -1; n--) {
				r = uni.k2 & (1U << n);
				cout << r;
			}
		} break;

		case 2: {
			short int  n = 0;
			vector <int> a;
			cout << "Введите число типа short int. Диапазон значений целых чисел  от –32768 до 32767" << endl;
			cin >> n;
			while (n > 0) {
				a.push_back(n % 2);
				n /= 2;
			}
			for (int i = a.size() - 1; i >= 0; --i) cout << a[i];

			cout << endl;
			cout << "Введите количество битов, которые не хотите инвертировать от 0 до " << a.size() << endl;
			int sum;
			cin >> sum;
			while (sum > 0) {
				cout << "Введите номер бита, который не хотите инвертировать в диапазоне от 0 до "<< a.size() << endl;
				int k=0;
				cin >> k;
				for (int i = a.size() - 1; i > k; --i) {
					a[i] = rand() % 2;
				} 
				for (int i = k - 1; i > -1; n--) {
					a[i] = rand() % 2;
				}
				sum--;
			} 
			for (int i = a.size() - 1; i >= 0; --i) {
				cout << a[i];
			} cout << endl;

		} break;
		}
	}

	system("pause");
}
